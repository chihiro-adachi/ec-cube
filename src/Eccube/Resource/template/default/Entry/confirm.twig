{% extends 'default_frame.twig' %}

{% set body_class = 'registration_page' %}

{% form_theme form with ['Form/form_div_layout.html.twig', _self] %}

{% block main %}
    <h1 class="page-heading">新規会員登録確認</h1>
    <div id="confirm_wrap" class="container-fluid">
        <div id="confirm_box" class="row">
            <div id="confirm_box__body" class="col-md-10 col-md-offset-1">
                <p id="confirm_box__message">下記の内容で送信してもよろしいでしょうか？<br/>よろしければ、一番下の「会員登録をする」ボタンをクリックしてください。</p>

                <form method="post" action="{{ url('entry') }}">
                    {{ form_widget(form._token) }}
                    <div id="confirm_box__body_inner" class="dl_table">
                        <dl id="confirm_box__name">
                            <dt>{{ form_label(form.name) }}</dt>
                            <dd class="form-group input_name">
                                {{ form.name.name01.vars.data }} {# form.vars.value = form.vars.data = Customer #}
                                {{ form.name.name02.vars.data }}
                                {{ form_widget(form.name.name01, { type : 'hidden' }) }}
                                {{ form_widget(form.name.name02, { type : 'hidden' }) }}
                            </dd>
                        </dl>
                        <dl id="confirm_box__kana">
                            <dt>{{ form_label(form.kana) }}</dt>
                            <dd class="form-group input_name">
                                {{ form.kana.kana01.vars.data }}
                                {{ form.kana.kana02.vars.data }}
                                {{ form_widget(form.kana.kana01, { type : 'hidden' }) }}
                                {{ form_widget(form.kana.kana02, { type : 'hidden' }) }}
                            </dd>
                        </dl>
                        <dl id="confirm_box__company_name">
                            <dt>{{ form_label(form.company_name) }}</dt>
                            <dd class="form-group input_name">
                                {{ form.company_name.vars.data }}
                                {{ form_widget(form.company_name, { type : 'hidden' }) }}
                            </dd>
                        </dl>
                        <dl id="confirm_box__address_detail">
                            <dt>{{ form_label(form.address) }}</dt>
                            <dd>
                                <div id="confirm_box__zip" class="form-group form-inline input_zip">
                                    〒 {{ form.zip.zip01.vars.data }} - {{ form.zip.zip02.vars.data }}
                                    {{ form_widget(form.zip.zip01, { type : 'hidden' }) }}
                                    {{ form_widget(form.zip.zip02, { type : 'hidden' }) }}
                                </div>
                                <div id="confirm_box__address">
                                    {{ form.address.pref.vars.data }} {{ form.address.addr01.vars.data }} {{ form.address.addr02.vars.data }}
                                    {{ form_widget(form.address.pref, { type : 'hidden' }) }}
                                    {{ form_widget(form.address.addr01, { type : 'hidden' }) }}
                                    {{ form_widget(form.address.addr02, { type : 'hidden' }) }}
                                </div>
                            </dd>
                        </dl>
                        <dl id="confirm_box__tel">
                            <dt>{{ form_label(form.tel) }}</dt>
                            <dd>
                                <div class="form-inline form-group input_tel">
                                    {{ form.tel.tel01.vars.data }} - {{ form.tel.tel02.vars.data }} - {{ form.tel.tel03.vars.data }}
                                    {{ form_widget(form.tel.tel01, { type : 'hidden' }) }}
                                    {{ form_widget(form.tel.tel02, { type : 'hidden' }) }}
                                    {{ form_widget(form.tel.tel03, { type : 'hidden' }) }}
                                </div>
                            </dd>
                        </dl>
                        <dl id="confirm_box__fax">
                            <dt>{{ form_label(form.fax) }}</dt>
                            <dd>
                                <div class="form-inline form-group input_tel">
                                    {{ form.fax.fax01.vars.data }} - {{ form.fax.fax02.vars.data }} - {{ form.fax.fax03.vars.data }}
                                    {{ form_widget(form.fax.fax01, { type : 'hidden' }) }}
                                    {{ form_widget(form.fax.fax02, { type : 'hidden' }) }}
                                    {{ form_widget(form.fax.fax03, { type : 'hidden' }) }}
                                </div>
                            </dd>
                        </dl>
                        <dl id="confirm_box__email">
                            <dt>{{ form_label(form.email) }}</dt>
                            <dd>
                                <div class="form-group">
                                    {{ form.email.vars.data }}
                                    {{ form_widget(form.email.first, { type : 'hidden' }) }}
                                    {{ form_widget(form.email.second, { type : 'hidden' }) }}
                                </div>
                            </dd>
                        </dl>
                        <dl id="confirm_box__password">
                            <dt>{{ form_label(form.password) }}</dt>
                            <dd>
                                <div class="form-group">
                                    ********
                                    {{ form_widget(form.password.first, { type : 'hidden' }) }}
                                    {{ form_widget(form.password.second, { type : 'hidden' }) }}
                                </div>
                            </dd>
                        </dl>
                    </div>
                    <div class="dl_table not_required">
                        <dl id="confirm_box__birth">
                            <dt>{{ form_label(form.birth) }}</dt>
                            <dd>
                                <div class="form-group form-inline">
                                    {{ form.birth.vars.data ? form.birth.vars.data|date('Y/m/d') }}
                                    {{ form_widget(form.birth.year, { type : 'hidden' }) }}
                                    {{ form_widget(form.birth.month, { type : 'hidden' }) }}
                                    {{ form_widget(form.birth.day, { type : 'hidden' }) }}
                                </div>
                            </dd>
                        </dl>
                        <dl id="confirm_box__sex">
                            <dt>{{ form_label(form.sex) }}</dt>
                            <dd>
                                <div class="form-group form-inline">
                                    {{ form.sex.vars.data }}
                                    {{ form_widget(form.sex, { type: 'hidden'}) }}
                                </div>
                            </dd>
                        </dl>
                        <dl id="confirm_box__job">
                            <dt>{{ form_label(form.job) }}</dt>
                            <dd>
                                <div class="form-group form-inline">
                                    {{ form.job.vars.data }}
                                    {{ form_widget(form.job, { type: 'hidden'}) }}
                                </div>
                            </dd>
                        </dl>
                    </div>

                    <div id="confirm_box__footer" class="row no-padding">
                        <div id="confirm_box__button_menu" class="btn_group col-sm-offset-4 col-sm-4">
                            <p id="confirm_box__insert_button">
                                <button type="submit" class="btn btn-primary btn-block" name="mode" value="complete">
                                    会員登録をする
                                </button>
                            </p>
                            <p id="confirm_box__back_button">
                                <button type="submit" class="btn btn-info btn-block" name="mode" value="back">戻る
                                </button>
                            </p>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
{% endblock %}
