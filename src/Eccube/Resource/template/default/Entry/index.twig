{% extends 'default_frame.twig' %}

{% set body_class = 'registration_page' %}

{% block javascript %}
<script src="//ajaxzip3.github.io/ajaxzip3.js" charset="UTF-8"></script>
<script>
    $(function() {
        $('#zip-search').click(function() {
            AjaxZip3.zip2addr('entry[zip][zip01]', 'entry[zip][zip02]', 'entry[address][pref]', 'entry[address][addr01]');
        });
    });
</script>
{% endblock javascript %}

{# with [ theme1.html.twig, theme2.html.twig, ...] でテーマを複数設定できる #}
{% form_theme form with ['Form/form_div_layout.html.twig', _self] %}

{#- _self を指定しておけば、 このtwig内でテーマを上書きできる #}
{#{% block form_errors %}#}
    {#{% if errors|length > 0 %}#}
        {#{% for error in errors %}#}
            {#<p class="errormsg text-danger">{{ error.message|trans }}</p>#}
        {#{% endfor %}#}
    {#{% endif %}#}
{#{% endblock %}#}

{% block main %}
<h1 class="page-heading">新規会員登録</h1>
<div id="top_wrap" class="container-fluid">
    <div id="top_box" class="row">
        <div id="top_box__body" class="col-md-10 col-md-offset-1">
            <form method="post" action="{{ url('entry') }}" novalidate>
                {{ form_widget(form._token) }}
                <div id="top_box__body_inner" class="dl_table">
                    <dl id="top_box__name">
                        <dt>{{ form_label(form.name) }}</dt>
                        <dd class="form-group input_name{% if form.name.vars.errors|length > 0 %} has-error{% endif %}">
                            {{ form_widget(form.name.name01, { 'attr' : { 'class' : 'form-control'}}) }}
                            {{ form_widget(form.name.name02, { 'attr' : { 'class' : 'form-control'}}) }}
                            {{ form_errors(form.name) }}
                        </dd>
                    </dl>
                    <dl id="top_box__kana">
                        <dt>{{ form_label(form.kana) }}</dt>
                        <dd class="form-group input_name{% if form.kana.vars.errors|length > 0 %} has-error{% endif %}">
                            {{ form_widget(form.kana.kana01, { 'attr' : { 'class' : 'form-control'}}) }}
                            {{ form_widget(form.kana.kana02, { 'attr' : { 'class' : 'form-control'}}) }}
                            {{ form_errors(form.kana) }}
                        </dd>
                    </dl>
                    <dl id="top_box__company_name">
                        <dt>{{ form_label(form.company_name) }}</dt>
                        <dd class="form-group input_name{% if form.company_name.vars.errors|length > 0 %} has-error{% endif %}">
                            {{ form_widget(form.company_name, { 'attr' : { 'class' : 'form-control'}}) }}
                            {{ form_errors(form.company_name) }}
                        </dd>
                    </dl>
                    <dl id="top_box__address_detail">
                        <dt>{{ form_label(form.address) }}</dt>
                        <dd>
                            <div id="top_box__zip" class="form-group form-inline input_zip{% if form.zip.vars.errors|length > 0 %} has-error{% endif %}">
                                〒{{ form_widget(form.zip.zip01, { 'attr' : { 'class' : 'form-control'}}) }} - {{ form_widget(form.zip.zip02, { 'attr' : { 'class' : 'form-control'}}) }}
                                <span class="question-circle"><svg class="cb cb-question"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#cb-question"></use></svg></span>
                                <a href="http://www.post.japanpost.jp/zipcode/" target="_blank">郵便番号検索</a>
                                {{ form_errors(form.zip) }}
                                <div class="zip-search">
                                    <button type="button" id="zip-search" class="btn btn-default btn-sm">郵便番号から自動入力</button>
                                </div>
                            </div>
                            <div id="top_box__address" class="{% if form.address.vars.errors is not empty or form.address.addr01.vars.errors is not empty or form.address.addr02.vars.errors is not empty %}has-error{% endif %}">
                                <div class="form-inline form-group">
                                    {{ form_widget(form.address.pref, { 'attr' : { 'class' : 'form-control'}}) }}
                                    {{ form_errors(form.address.pref) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.address.addr01, { 'attr' : { 'class' : 'form-control'}}) }}
                                    {{ form_errors(form.address.addr01) }}
                                    {{ form_widget(form.address.addr02, { 'attr' : { 'class' : 'form-control', 'style' : 'margin-top : 15px' }}) }}
                                    {{ form_errors(form.address.addr02) }}
                                </div>
                                {{ form_errors(form.address) }}
                            </div>
                        </dd>
                    </dl>
                    <dl id="top_box__tel">
                        <dt>{{ form_label(form.tel) }}</dt>
                        <dd>
                            <div class="form-inline form-group input_tel{% if form.tel.vars.errors|length > 0 %} has-error{% endif %}">
                                {{ form_widget(form.tel.tel01, { 'attr' : { 'class' : 'form-control'}}) }} - {{ form_widget(form.tel.tel02, { 'attr' : { 'class' : 'form-control'}}) }} - {{ form_widget(form.tel.tel03, { 'attr' : { 'class' : 'form-control'}}) }}
                                {{ form_errors(form.tel.tel01) }}
                                {{ form_errors(form.tel.tel02) }}
                                {{ form_errors(form.tel.tel03) }}
                            </div>
                        </dd>
                    </dl>
                    <dl id="top_box__fax">
                        <dt>{{ form_label(form.fax) }}</dt>
                        <dd>
                            <div class="form-inline form-group input_tel{% if form.fax.vars.errors|length > 0 %} has-error{% endif %}">
                                {{ form_widget(form.fax.fax01, { 'attr' : { 'class' : 'form-control'}}) }} - {{ form_widget(form.fax.fax02, { 'attr' : { 'class' : 'form-control'}}) }} - {{ form_widget(form.fax.fax03, { 'attr' : { 'class' : 'form-control'}}) }}
                                {{ form_errors(form.fax.fax01) }}
                                {{ form_errors(form.fax.fax02) }}
                                {{ form_errors(form.fax.fax03) }}
                            </div>
                        </dd>
                    </dl>
                    <dl id="top_box__email">
                        <dt>{{ form_label(form.email) }}</dt>
                        <dd>
                            <div class="form-group{% if form.email.first.vars.errors|length > 0 %} has-error{% endif %}">
                                {{ form_widget(form.email.first, { 'attr' : { 'class' : 'form-control' }}) }}
                                {{ form_errors(form.email.first) }}
                            </div>
                            <div class="form-group{% if form.email.second.vars.errors|length > 0 %} has-error{% endif %}">
                                {{ form_widget(form.email.second, { 'attr' : { 'class' : 'form-control' }}) }}
                                {{ form_errors(form.email.second) }}
                            </div>
                        </dd>
                    </dl>
                    <dl id="top_box__password">
                        <dt>{{ form_label(form.password) }}</dt>
                        <dd>
                            <div class="form-group{% if form.password.first.vars.errors|length > 0 %} has-error{% endif %}">
                                {{ form_widget(form.password.first, { 'type' : 'password', 'attr' : { 'class' : 'form-control' }}) }}
                                {{ form_errors(form.password.first) }}
                            </div>
                            <div class="form-group{% if form.password.second.vars.errors|length > 0 %} has-error{% endif %}">
                                {{ form_widget(form.password.second, { 'type' : 'password', 'attr' : { 'class' : 'form-control' }}) }}
                                {{ form_errors(form.password.second) }}
                            </div>
                        </dd>
                    </dl>
                </div>
                <div id="top_box__birth" class="dl_table not_required">
                    <dl>
                        <dt>{{ form_label(form.birth) }}</dt>
                        <dd>
                            <div class="form-group form-inline">
                                {{ form_widget(form.birth.year, {'attr' : { 'class' : 'form-control' }}) }}
                                {{ form_widget(form.birth.month, {'attr' : { 'class' : 'form-control' }}) }}
                                {{ form_widget(form.birth.day, {'attr' : { 'class' : 'form-control' }}) }}
                                {{ form_errors(form.birth.year) }}
                                {{ form_errors(form.birth.month) }}
                                {{ form_errors(form.birth.day) }}
                            </div>
                        </dd>
                    </dl>
                    <dl>
                        <dt id="top_box__sex">{{ form_label(form.sex) }}</dt>
                        <dd>
                            <div class="form-group form-inline">
                                <div id="entry_sex">
                                    {% for sex in form.sex %}
                                    <div class="radio">
                                        <label>{{ form_widget(sex)}}{{ sex.vars.label }}</label>
                                    </div>
                                    {% endfor %}
                                </div>
                                {{ form_errors(form.sex) }}
                            </div>
                        </dd>
                    </dl>
                    <dl id="top_box__job">
                        <dt>{{ form_label(form.job) }}</dt>
                        <dd>
                            <div class="form-group form-inline">
                                {{ form_widget(form.job, { 'attr' : { 'class' : 'form-control'}}) }}
                                {{ form_errors(form.job) }}
                            </div>
                        </dd>
                    </dl>
                </div>
                {% for f in form %}
                    {% if f.vars.name matches '[^plg*]' %}
                        <div class="extra-form dl_table">
                            {{ form_row(f) }}
                        </div>
                    {% endif %}
                {% endfor %}
                <input id="top_box__hidden_mode" type="hidden" name="mode" value="confirm">
                <p id="top_box__agreement" class="form_terms_link"><a href="{{ url('help_agreement') }}" target="_blank">利用規約</a>に同意してお進みください
                </p>

                <div id="top_box__footer" class="row no-padding">
                    <div id="top_box__button_menu" class="btn_group col-sm-offset-4 col-sm-4">
                        <p>
                            <button type="submit" class="btn btn-primary btn-block">同意する</button>
                        </p>
                        <p><a href="{{ url('index') }}" class="btn btn-info btn-block">同意しない</a></p>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
{% endblock %}
