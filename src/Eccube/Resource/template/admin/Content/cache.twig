{% extends '@admin/default_frame.twig' %}

{% set menus = ['content', 'cache'] %}

{% block title %}{{ 'admin.content.cache_management'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin.content.contents_management'|trans }}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block javascript %}

<script>
    $(function () {
        $('#clear-cache-button').on('click', function () {
            $.post('{{ url('admin_content_cache_enable_maintenance') }}')
            .then(function () {
                return $.post('{{ url('admin_content_cache_clear_cache') }}')
            })
            .then(function () {
                return $.post('{{ url('admin_content_cache_create_cache') }}')
            })
            .then(function () {
                return $.post('{{ url('admin_content_cache_disable_maintenance') }}')
            })
            .always(function() {
                location.reload();
            })
        })
    })
</script>

{% endblock %}

{% block main %}
    <form method="post" action="{{ url('admin_content_cache') }}">
        {{ form_widget(form._token) }}
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col"><span class="card-title">{{ 'admin.content.cache__card_title'|trans }}</span></div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col-auto">
                                    <span>{{ 'admin.content.cache_message'|trans }}</span>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-auto">
                                    <button id="clear-cache-button" type="button" class="btn btn-ec-conversion">{{ 'admin.content.cache_delete'|trans }}</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
