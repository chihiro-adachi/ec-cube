{% extends '@admin/styleguide_frame.twig' %}

{% set menus = ['content', 'layout'] %}

{% block title %}{{'admin.content.layout_list.46'|trans}}{% endblock %}
{% block sub_title %}{{'admin.content.layout_list.45'|trans}}{% endblock %}

{% block javascript %}{% endblock %}

{% block stylesheet %}
    <style>
        .ec-cardCollapse{ min-height: 49px;}
    </style>
{% endblock stylesheet %}

{% block main %}
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-pc" role="tabpanel" aria-labelledby="pills-pc-tab">
                        <div class="d-block mb-3">
                            <a class="btn btn-ec-regular" href="{{ url('admin_content_layout_new') }}">レイアウトを追加</a>
                        </div>

                        {# layouts #}
                        {% for Layout in Layouts %}
                            {% if Layout.devicetype.id %}
                                <div class="card rounded border-0 mb-4">
                                    <div class="card-header">
                                        <div class="row">
                                            <div class="col-8">
                                                {% if Layout.DeviceType is not empty and Layout.DeviceType.id == 10 %}
                                                    <i class="fa fa-desktop fa-lg mr-2"></i>
                                                {% else %}
                                                    <i class="fa fa-mobile fa-lg mr-2"></i>
                                                {% endif %}
                                                <a class="card-title align-middle" href="{{ url('admin_content_layout_edit', { id : Layout.id } ) }}">{{ Layout.name }}</a>
                                                {% if Layout.id == 1 or Layout.id == 3   %}
                                                {% elseif Layout.Pages|length > 0 %}
                                                    <button class="btn btn-ec-sub" type="button" disabled="disabled">{{ 'admin.content.layout_list.delete_layout'|trans }}</button>

                                                {% else %}
                                                <button class="btn btn-ec-delete" type="button" data-toggle="modal" data-target="#layoutDelete">{{ 'admin.content.layout_list.delete_layout'|trans }}</button>
                                                {% endif %}
                                            </div>
                                            <div class="col-4 text-right"><a data-toggle="collapse" href="#topPageLayout-pc-{{ Layout.id }}" aria-expanded="false" aria-controls="topPageLayout-pc-{{ Layout.id }}"><i class="fa fa-angle-down fa-lg"></i></a></div>
                                        </div>
                                    </div>

                                    {# Pages #}
                                    {% if Layout.pages|length > 0 %}
                                        <div class="collapse ec-cardCollapse sortables"
                                             data-layout-id="{{ Layout.id }}"
                                             id="topPageLayout-pc-{{ Layout.id }}">
                                            {% for Page in Layout.pages %}
                                                {% if Page.id != 0 %}
                                                <div class="card-body p-0"
                                                     data-page-id="{{ Page.id }}"
                                                     data-layout-id="{{ Layout.id }}"
                                                     data-sort-no="{{ Page.getSortNo(Layout.id) }}">
                                                    <div class="row justify-content-between p-3">
                                                        <div class="col-auto">
                                                            <i class="fa fa-bars text-ec-gray mr-3"></i><span><a href="{{ url('admin_content_page_edit', {id : Page.id}) }}">{{ Page.name }}</a></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endif %}
                                            {% endfor %}
                                        </div>
                                    {% else %}
                                        <div class="collapse ec-cardCollapse sortables"
                                             data-layout-id="{{ Layout.id }}"
                                             id="topPageLayout-pc-{{ Layout.id }}">
                                            <div class="p-0 empty-item">
                                                <div class="d-block p-3">
                                                    <span class="text-muted">{{ 'admin.content.layout_list.no_pages_message'|trans }}</span>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="tab-pane fade" id="pills-mobile" role="tabpanel" aria-labelledby="pills-mobile-tab">
                        <div class="d-block mb-3">
                            <a class="btn btn-ec-regular" href="{{ url('admin_content_layout_new')}}?DeviceType={{ constant('\\Eccube\\Entity\\Master\\DeviceType::DEVICE_TYPE_SP') }}">{{ 'admin.content.layout_list.add_mobile_layout'|trans }}</a>
                        </div>
                        <div class="card rounded border-0 mb-4">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-8">
                                        <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip"><span class="card-title">{{ 'admin.content.layout_list.default_layout'|trans }}</span><i class="fa fa-question-circle fa-lg ml-1"></i></div>
                                    </div>
                                    <div class="col-4 text-right"><a data-toggle="collapse" href="#defaultLayout-mobile" aria-expanded="false" aria-controls="defaultLayout-mobile"><i class="fa fa-angle-up fa-lg"></i></a></div>
                                </div>
                            </div>
                            <div class="collapse show ec-cardCollapse" id="defaultLayout-mobile">
                                <div class="card-body">
                                    {# TODO デフォルトのレイアウトを選択して登録できるようにする #}
                                    <div class="row">
                                        <div class="col-3 pr-0">
                                            <form>
                                                <select class="form-control">
                                                    {% for Layout in Layouts %}
                                                        <option value="">{{ Layout.name }}</option>
                                                    {% endfor %}
                                                </select>
                                            </form>
                                        </div>
                                        <div class="col">
                                            <button class="btn btn-ec-regular" type="button">{{ 'common.label.save'|trans }}</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="addPage" tabindex="-1" role="dialog" aria-labelledby="addPage" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        {# TODO レイアウトにページを追加できるようにする #}
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">{{ 'admin.content.layout_list.add_page.title'|trans }}</h5>
                                <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                            </div>
                            <div class="modal-body">
                                <p>{{ 'admin.content.layout_list.add_page.confirm_message'|trans }}</p>
                                <form>
                                    <select class="form-control">

                                        <option>// TODO ページの一覧表示</option>
                                        <option>...</option>
                                    </select>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-ec-sub w-25" type="button" data-dismiss="modal">{{ 'admin.content.layout_list.add_page.cancel'|trans }}</button>
                                <button class="btn btn-ec-conversion w-25" type="button" data-dismiss="modal">{{ 'admin.content.layout_list.add_page.add'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="layoutDelete" tabindex="-1" role="dialog" aria-labelledby="layoutDelete" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        {# TODO レイアウトを削除できるようにする #}
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">{{ 'admin.content.layout_list.delete_layout.title'|trans }}</h5>
                                <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                            </div>
                            <div class="modal-body">
                                <p>{{ 'admin.content.layout_list.delete_layout.confirm_message'|trans }}</p>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-ec-sub w-25" type="button" data-dismiss="modal">{{ 'admin.content.layout_list.delete_layout.cancel'|trans }}</button>
                                <button class="btn btn-ec-delete" type="button" data-dismiss="modal">{{ 'admin.content.layout_list.delete_layout.delete'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="duplicateNotification" tabindex="-1" role="dialog" aria-labelledby="duplicateNotification" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title font-weight-bold">{{ 'admin.content.layout.popup.error'|trans }}</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body text-left">
                    <p class="text-left">{{ 'admin.content.layout.popup.message'|trans }}</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-v-sub" type="button" data-dismiss="modal">{{ 'admin.content.layout.cancel'|trans }}</button>
                </div>
            </div>
        </div>
    </div><!-- /#duplicateNotification -->

    <div class="modal fade" id="confirmMove" tabindex="-1" role="dialog" aria-labelledby="confirmMove" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title font-weight-bold">{{ 'admin.content.layout.popup.confirm.title'|trans }}</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body text-left">
                    <p class="text-left">{{ 'admin.content.layout.popup.confirm.message'|trans|raw }}</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-v-sub" type="button" data-dismiss="modal">{{ 'admin.content.layout.cancel'|trans }}</button>
                    <button class="btn btn-ec-conversion" type="button" data-dismiss="modal">{{ 'admin.content.layout.popup.button.move'|trans }}</button>
                </div>
            </div>
        </div>
    </div><!-- /#confirmMove -->
{% endblock %}
