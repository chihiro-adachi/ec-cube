{
    "name": "EC-CUBE3",
    "description": "EC-CUBE3 on Heroku",
    "website": "https://github.com/EC-CUBE/ec-cube",
    "repository": "https://github.com/EC-CUBE/ec-cube",
    "keywords": ["php", "ec", "e-commerce", "ec-cube"],
    "addons": [
        "heroku-postgresql"
    ],
    "buildpacks": [
        {
            "url": "heroku/php"
        }
    ],
    "env": {
        "MAIL_BACKEND": {
            "description": "mail backend",
            "value": "smtp"
        },
        "MAIL_HOST": {
            "description": "mail host",
            "value": "smtp.sendgrid.net"
        },
        "MAIL_PORT": {
            "description": "mail port",
            "value": "25"
        },
        "MAIL_USER": {
            "description": "mail user",
            "value": ""
        },
        "MAIL_PASS": {
            "description": "mail password",
            "value": ""
        }
    }
}
